<ControllerPanel@BoxLayout>:
    Button:
        background_color: 0.6, 0.8, 0.8, 1
        text:"Open"
        on_press: root.openDialog()
    Button:
        background_color: 0.6, 0.8, 0.8, 1
        text:"Save"
        on_press: root.save()
    Button:
        background_color: 0.6, 0.8, 0.8, 1
        text:"Search"
        on_press: root.searchDialog()
    Button:
        background_color: 0.6, 0.8, 0.8, 1
        text:"Delete"
        on_press: root.deleteDialog()
    Button:
        background_color: 0.6, 0.8, 0.8, 1
        text: "Add record"
        on_press: root.addRecordDialog()